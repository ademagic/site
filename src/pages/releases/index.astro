---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Releases';
const description = 'A somewhat curated written history of this website.';
const permalink = `${Astro.site.href}releases`;

let allReleases = await Astro.glob('../../data/releases/*.md');
allReleases = allReleases
  .sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="container">
    <h1>Releases</h1>
    <p>{description}</p>
    <p>You can check out more details in the <a href="https://www.github.com/ademagic/site">GitHub Repository</a>.</p>
    {allReleases.map((post, index) => {
      const href = `/releases/${post.file.split('/').pop().split('.').shift()}`;
      return (
        <div>
          { index !== 0 && <hr /> }
          <div class="post-item">
            <h2>
              <a href={href}>{post.frontmatter.title}</a>
            </h2>
            <p>{post.frontmatter.description}</p>
            <div class="post-item-footer">
              <span class="post-item-date">â€” {post.frontmatter.publishDate}</span>
            </div>
          </div>
        </div>
      )
    })}
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-sans);
    font-weight: 700;
  }

  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  hr {
    margin: 60px auto;
  }
  ul {
    margin: 0;
    padding: 0;
  }

  li {
    display: inline-block;
    margin: 0 0 0.5em 0.5em;
  }

  li a {
    font-size: 1rem;
    font-family: var(--font-family-sans);
    text-decoration: none;
  }
</style>
