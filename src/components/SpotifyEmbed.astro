---
const { link } = Astro.props;
---

{link &&
  <div>
    <iframe style="border-radius:12px; height: 100px" src={`https://open.spotify.com/embed/${link}?utm_source=generator&theme=0`} width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>}

<style>
  div {
    max-width: 600px;
    margin: 40px auto;
  }
</style>