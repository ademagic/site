---
const {text, link, count = false} = Astro.props;
---

<style>
  .tag {
    display: inline-block;
    background-color: var(--code-text);
    color: var(--code-body);
    border-radius: 1.25em;
    font-family: var(--font-family-sans);
    font-size: 1rem;
    transition: all 0.25s ease;
    position: relative;
  }

  .tag a {
    font-weight: normal;
    text-decoration: none;
    padding: 0.5em 1em;
    box-shadow: none;
  }
  
  .tag:hover {
    background-color: var(--primary-color);
    cursor: pointer;
  }

  .tag:hover a {
    color: white;
    box-shadow: none;
  }

  .tag:hover .count {
    color: white;
  }

  .count {
    border-radius: 50%;
    color: var(--primary-color);
    font-size: 14px;
    font-family: var(--font-family-sans);
    vertical-align: middle;
    line-height: 1.6;
    margin-left: 1em
  }

  .count + a {
    padding-left: .5em;
  }

</style>

<span class="tag">
  {count && <span class="count">{count}</span>}
  <a href={link}>{text}</a>
</span>
