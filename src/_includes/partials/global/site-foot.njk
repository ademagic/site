<footer role="contentinfo" class="[ site-foot ] [ pad-top-700 pad-bottom-900 ]">
  <div class="wrapper">
    <div class="[ site-foot__inner ] [ layoutWrapper ]">
      <div>
        {% include "partials/components/social.njk" %}
      </div>
      <div>
        {% include "partials/components/nav-foot.njk" %}
      </div>
    </div>
    {% if site.showThemeCredit %}
      <p class="[ site-foot__credit ] [ pad-top-900 ]">
        &copy; 2020 {{ site.name }}. <a href="/credits">Credits</a>.
      </p>
    {% endif %}
  </div>
</footer>
